<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
          "http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">


<struts-config>
    <form-beans>
        <form-bean name="CreateLanguageActionForm" type="eep.as.leoven.forms.CreateLanguageActionForm"/>
    </form-beans>

    <global-exceptions>

    </global-exceptions>

    <global-forwards>

    </global-forwards>

    <action-mappings>
        <action input="/CreateLanguage" name="CreateLanguageActionForm" path="/CreateLanguage" scope="session" type="eep.as.leoven.actions.CreateLanguageAction">
            <forward name="success" path="/CreateLanguageSuccess.jsp" />
        </action>
    </action-mappings>

    <message-resources parameter="eep/as/leoven/resources/ApplicationResource"/>    

</struts-config>
